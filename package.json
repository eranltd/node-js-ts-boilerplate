{
  "name": "nodejs-microservice-boilerplate",
  "version": "1.0.0",
  "description": "A highly scalable, best developer experience and a focus on performance and best practices.",
  "main": "build/index.js",
  "scripts": {
    "postversion": "git push --tags && git push --all",
    "build-server": "tsc -p .",
    "clean": "rm -r build",
    "dev-server": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "dev": "run-p dev-server",
    "build": "run-s build-server",
    "prestart": "run-s clean build",
    "test": "jest",
    "start": "node build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Workiz/nodejs-microservice-boilerplate.git"
  },
  "author": "Workiz Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Workiz/nodejs-microservice-boilerplate/issues"
  },
  "homepage": "https://github.com/Workiz/nodejs-microservice-boilerplate#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/$1"
    }
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "fs": "0.0.1-security",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
